@model IEnumerable<OnlineStore.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale= 1" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   
    <script type="text/javascript">
        function clickCounter() {
            if (typeof (Storage) !== "undefined") {
                if (localStorage.clickcount) {
                    localStorage.clickcount = Number(localStorage.clickcount) + 1;
                } else {
                    localStorage.clickcount = 1;
                }
                document.getElementById("shoppingCart").innerHTML = "You have clicked the button " + localStorage.clickcount + " time(s).";
            } else {
                document.getElementById("shoppingCart").innerHTML = "Sorry, your browser does not support web storage...";
            }
        }
        
    </script>
    <title>The Online Store</title>
</head>

<body>

    <div class="container">
        <div class="page-header">
            <h1>Welcome to the Online Store</h1>
            <p>Please select the product or click one of the options below</p>
            <br />
            <p>
                <a href="#" class="btn btn-info btn-lg">
                    <span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart
                </a>
                <div id="shoppingCart">
                </div>
            </p>        
            <br />     
            <div class="row">

                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <img class="img-responsive img-thumbnail" src="@product.picture" />

                        <p>ID: @product.Id</p>
                        <p>Name: @product.Name</p>
                        <p>Price: @product.Price</p>
                        <button type="button" class="btn btn-info btn-lg" onclick="clickCounter()" >
                            <span class="glyphicon glyphicon-plus-sign"></span> Add to cart
                        </button>
                        <br />
                        <br />
                    </div>
                }
 
                </div>
            </div>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    </body>

</html>