@model IEnumerable<OnlineStore.Models.Product>

<!DOCTYPE html>
<html>

<head>


    <meta name="viewport" content="width=device-width, initial-scale= 1" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <style type="text/css">
        .img-thumbnail {
            width: auto;
            height: auto;
            overflow: auto;
        }
    </style>
    <title>The Online Store</title>
</head>

<body>

    <ul>
        @foreach (var product in Model)
        {
            <li>@product.Name</li>
        }
    </ul>
    <div class="container">
        <div class="page-header">
            <h1>Welcome to the Online Store</h1>
            <p>Please select the product that you would like to view:</p>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">

                <img class="img-responsive img-thumbnail" src="http://www.bayareakicks.com/wp-content/uploads/2011/03/adidas-soccer-cleats-shoes-5.jpg" />
                <p>Adidas soccer shoes</p>
                <p>$99.99</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <img class="img-responsive img-thumbnail" src="http://image-load-balancer.worldsportshops.com/Images/watermarked_thumbnail.aspx?photoNum=1&t=I&catalog=Soccer&img=71781" />
                <p>Venezuela soccer shirt</p>
                <p>$69.99</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <img class="img-responsive img-thumbnail" src="http://assets.academy.com/mgen/00/10269800.jpg" />
                <p> Soccer shin guards</p>
                <p>$19.99</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">

                <img class="img-responsive img-thumbnail" src="http://image-load-balancer.worldsportshops.com/Datafeeds/Graphics/Products/ImageCache/600x600/71662.jpg" />
                <p> Adidas soccer ball</p>
                <p>$19.99</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">

                <img class="img-responsive img-thumbnail" src="http://worldsoccertalk.com/wp-content/uploads/2014/04/usmnt-world-cup-away-shirt1.jpg" />
                <p> USA soccer shirt</p>
                <p>$69.99</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">

                <img class="img-responsive img-thumbnail" src="http://www.yomister.com/image/large/iPZ8kLwDTalalGc9iaVD6=VtkvVwjaIC6=gB/images/liverpool-gk-away-socks-2012-13.jpg" />
                <p> Soccer socks</p>
                <p>$9.99</p>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>

</html>